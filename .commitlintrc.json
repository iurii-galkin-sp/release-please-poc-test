{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "scope-empty": [2, "never"],
    "scope-enum": [
      2,
      "always",
      [
        "project",
        "activity",
        "payment",
        "activity-schema",
        "payment-schema",
        "release",
        "revert" 
      ]
    ],
    "header-max-length": [2, "always", 72],
    "body-leading-blank": [2, "always"]
  }
}