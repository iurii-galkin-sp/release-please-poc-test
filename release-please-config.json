{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "separate-pull-requests": false,
  "bump-minor-pre-major": true,
  "group-pull-request-title-pattern": "chore(release): prepare new release",
  "packages": {
    ".": {
      "component": "project",
      "release-type": "simple"
    },
    "services/activity": {
      "component": "activity",
      "release-type": "simple"
    },
    "services/payment": {
      "component": "payment",
      "release-type": "simple"
    },
    "services/resources/database/activity/schema": {
      "component": "activity-schema",
      "release-type": "simple"
    },
    "services/resources/database/payment/schema": {
      "component": "payment-schema",
      "release-type": "simple"
    }
  }
}